#1. ELIMINAR DUPLICADOS 
def magia_numerica(lista):
    # Creamos una copia de la lista original para no modificarla
    lista_modificada = lista.copy()
    # Eliminamos los elementos duplicados manteniendo el orden original
    lista_modificada = list(dict.fromkeys(lista_modificada))
    return lista_modificada

# Ejemplo de uso
numeros = [1, 2, 3, 4, 4, 5, 6, 6, 7, 8, 9, 9, 10]
resultado = magia_numerica(numeros)
print("Lista original:", numeros)
print("Lista después de la magia numérica:", resultado)

#2.ORDENAR MAYOR A MENOR.

def magia_numerica(lista):
    # Creamos una copia de la lista original para no modificarla
    lista_modificada = lista.copy()
    # Eliminamos los elementos duplicados usando un conjunto
    lista_modificada = list(set(lista_modificada))
    # Ordenamos la lista de mayor a menor
    lista_modificada.sort(reverse=True)
    return lista_modificada

# Ejemplo de uso
numeros = [1, 2, 3, 4, 4, 5, 6, 6, 7, 8, 9, 9, 10]
resultado = magia_numerica(numeros)
print("Lista original:", numeros)
print("Lista después de la magia numérica:", resultado)

#3.ELIMINAR IMPARES

def magia_numerica(lista):
    # Eliminar duplicados
    lista_modificada = list(set(lista))
    # Filtrar los números pares
    lista_modificada = [num for num in lista_modificada if num % 2 == 0]
    return lista_modificada

# Ejemplo de uso
numeros = [1, 2, 3, 4, 4, 5, 6, 6, 7, 8, 9, 9, 10]
resultado = magia_numerica(numeros)
print("Lista original:", numeros)
print("Lista después de la magia numérica:", resultado)

#4.SUMAR TODOS LOS NUMEROS RESTANTES

def magia_numerica(lista):
    # Eliminar duplicados
    lista_modificada = list(set(lista))
    # Filtrar los números pares
    lista_modificada = [num for num in lista_modificada if num % 2 == 0]
    # Sumar los números restantes
    suma = sum(lista_modificada)
    return suma

# Ejemplo de uso
numeros = [1, 2, 3, 4, 4, 5, 6, 6, 7, 8, 9, 9, 10]
resultado = magia_numerica(numeros)
print("Lista original:", numeros)
print("Suma de los números después de la magia numérica:", resultado)

#5.COLOCAR ESTA SUMA EN EL PRIMERO DE LA LISTA

def magia_numerica(lista):
    # Eliminar duplicados
    lista_modificada = list(set(lista))
    # Filtrar los números pares
    lista_modificada = [num for num in lista_modificada if num % 2 == 0]
    # Sumar los números restantes
    suma = sum(lista_modificada)
    # Agregar la suma al principio de la lista
    lista_modificada.insert(0, suma)
    return lista_modificada

# Ejemplo de uso
numeros = [1, 2, 3, 4, 4, 5, 6, 6, 7, 8, 9, 9, 10]
resultado = magia_numerica(numeros)
print("Lista original:", numeros)
print("Lista después de la magia numérica:", resultado)